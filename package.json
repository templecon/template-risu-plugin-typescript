{
  "name": "risuai-plugin",
  "description": "A RisuAI plugin template",
  "private": true,
  "version": "0.0.0",
  "license": "GPL-3.0-only",
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "install:types": "python utils/updateRisuaiDts.py",
    "postbuild": "python utils/removeAtRisu.py",
    "postinstall": "pnpm exec simple-git-hooks",
    "format": "biome format --write .",
    "lint": "biome check ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.1",
    "cross-env": "^10.1.0",
    "lint-staged": "^16.2.6",
    "rollup": "^4.53.2",
    "rollup-sourcemap-path-transform": "^1.1.0",
    "simple-git-hooks": "^2.13.1",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3"
  }
}